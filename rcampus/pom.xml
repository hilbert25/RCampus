	<!-- 版本 -->
	<properties>
		<base.version>1.0</base.version>
		<spring.version>4.1.6.RELEASE</spring.version>
		<mybatis.version>3.3.0</mybatis.version>
		<mysql.version>5.1.36</mysql.version>
		<druid.version>1.0.14</druid.version>
